<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primary_dark"
    style="@style/ThemeDialog">

    <TextView
        android:text="Si sale cerrará sesión y perderá todos los pedidos no realizados."
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dl_alert"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        android:textAlignment="center" />

    <TextView
        android:text="¿Continuar?"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dl_preg"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dl_alert"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="Si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_dl_si"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dl_preg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_dl_no"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_dl_no"
        app:layout_constraintTop_toTopOf="@+id/bt_dl_si"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_dl_si" />

</android.support.constraint.ConstraintLayout>