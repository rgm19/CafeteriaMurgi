<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a2dam.fila1.grupo.proyecto_trimestre_2_cafeteria.ActivityCafe">

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/tb_cf"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/coffee"
        android:id="@+id/iv_cf_foto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_cf"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:layout_height="100dp" />

    <Button
        android:text="Pedir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cf_pedir"
        app:layout_constraintTop_toTopOf="@+id/tb_cf"
        app:layout_constraintRight_toRightOf="@+id/tb_cf"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tb_cf" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_back"
        android:id="@+id/ib_cf_volver"
        app:layout_constraintTop_toTopOf="@+id/tb_cf"
        app:layout_constraintBottom_toBottomOf="@+id/tb_cf"
        app:layout_constraintLeft_toLeftOf="@+id/tb_cf"
        android:background="#00000000"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cf_tipo"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_cf_foto"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:id="@+id/sp_cf_tipo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cf_tipo"
        app:layout_constraintTop_toTopOf="@+id/tv_cf_tipo"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20572917"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="79dp" />

    <CheckBox
        android:text="Leche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_cf_leche"
        app:layout_constraintTop_toBottomOf="@+id/sp_cf_tamano"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cb_cf_sacarina"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:text="Sacarina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_cf_sacarina"
        app:layout_constraintLeft_toRightOf="@+id/cb_cf_leche"
        app:layout_constraintBaseline_toBaselineOf="@+id/cb_cf_leche"
        app:layout_constraintRight_toLeftOf="@+id/cb_cf_hielo" />

    <CheckBox
        android:text="Hielo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_cf_hielo"
        app:layout_constraintLeft_toRightOf="@+id/cb_cf_sacarina"
        app:layout_constraintBaseline_toBaselineOf="@+id/cb_cf_sacarina"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Precio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cf_precio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_cf_precioNum"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_cf_precioNum" />

    <TextView
        android:text="€€€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cf_precioNum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_cf_precio"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/cb_cf_sacarina"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        android:id="@+id/linearLayout">
        <include layout="@layout/menu_cantidad"/>
    </LinearLayout>

    <TextView
        android:text="Tamaño"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cf_tamano"
        app:layout_constraintRight_toRightOf="@+id/tv_cf_tipo"
        app:layout_constraintTop_toTopOf="@+id/sp_cf_tamano"
        app:layout_constraintBottom_toBottomOf="@+id/sp_cf_tamano" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:id="@+id/sp_cf_tamano"
        app:layout_constraintRight_toRightOf="@+id/sp_cf_tipo"
        app:layout_constraintLeft_toLeftOf="@+id/sp_cf_tipo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_cf_tipo" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_shopping_cart"
        android:id="@+id/floatingActionButton"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_cf_precioNum"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />
</android.support.constraint.ConstraintLayout>
